<div class="parts-selector"> 
    
    <div class="header">
      <h1> Front side</h1>
      <a class="save btn btn-large btn-primary"> Save Front side </a>
    </div>
    
    <div class="content">
      <div class="transparent">
        <%= image_tag("shirt.png", id: 'dress') %>
      </div>
    </div>
</div>

<script type="text/javascript">
  var coordinates = null;
  
  $(document).ready(function() {
    $("#dress").Jcrop({
      setSelect: [100, 100, 300, 300],
      onSelect: updateCoordinates,
      onChange: updateCoordinates
    });

    $('#dress').on('cropmove cropend',function(e,s,coords){
      $('#crop_front_x').val(coords.x);
      $('#crop_front_y').val(coords.y);
      $('#crop_front_w').val(coords.w);
      $('#crop_front_h').val(coords.h);
    });


  });
  
  var updateCoordinates = function(_coordinates) {
    coordinates = _coordinates
  }
  
  $(".save").click(function(event){
    console.log(coordinates)
  })
  
</script>