source 'https://rubygems.org'

# Stack
gem 'rails', '4.2.6'
gem 'pg'
gem 'puma'
gem 'foreman'
gem 'rack-canonical-host'
gem 'rack-cors'

# View
gem 'slim-rails'
gem 'sass-rails', '~> 5.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'bootstrap-sass'
gem 'jquery-rails'
gem 'font-awesome-rails'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'


# Auth
gem 'devise'
gem 'cancancan'


group :doc do
  gem 'sdoc', require: false
end

group :development, :test do
  gem 'byebug'
  gem 'letter_opener'
end

group :development do
  gem 'web-console', '~> 2.0'
  gem 'spring'
  gem 'byebug'
end

# Logging
group :production, :staging do
  gem 'rails_12factor'
end